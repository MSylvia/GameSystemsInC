{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env":{
        },
    },
    
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${fileBasenameNoExtension}.c",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-Wall",
                "-std=c99",
                "--warn-no-missing-braces",
                "-I",
                "C:\\raylib\\raylib\\src\\",
                "-L",
                "C:\\raylib\\raylib\\src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}